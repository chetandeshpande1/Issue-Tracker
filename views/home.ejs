

<div class="mb-5 p-5">
  <% for( let project of projects ) { %>
  <div class="card mb-4 w-50 m-auto rounded shadow-lg zoom-effect bg-light ">

    <div class="card-header">
      Name of the project: <%= project.name %>
    </div>

    <div class="card-body">
      
      <h6 class="card-subtitle mb-2 text-muted">
        Author: <%= project.author %>
      </h6>

      <p class="card-text">
        Description: <%= project.description %>
      </p>

      <div class="m-auto text-end">
        <a href="/project/<%=project._id%>" class="btn btn-primary m-auto"> Open project</a>
      </div>
    </div>
  </div>
  <% } %>
</div>
